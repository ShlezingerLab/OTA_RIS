{
    // === Python Configuration ===
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    // === Linting & Formatting ===
    // === Global Editor Settings ===
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.eol": "\n",
    "files.encoding": "utf8",
    // === Python Language Specific ===
    "[python]": {
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll.ruff": "explicit"
      },
      "editor.rulers": [
        120
      ],
      "editor.tabSize": 4,
      "editor.insertSpaces": true,
      "editor.defaultFormatter": "ms-python.python"
    },
    // === Code Analysis ===
    "python.analysis.autoImportCompletions": true,
    // === File Associations ===
    "files.associations": {
      "*.py": "python",
      "*.pyi": "python",
      "*.toml": "toml",
      "*.yaml": "yaml",
      "*.yml": "yaml",
      "*.json": "jsonc",
      "*.csv": "csv",
      "*.md": "markdown",
      "*.hal": "python",
      "*.cfg": "ini",
      "*.seq": "python"
    },
    // === File Exclusions ===
    "files.exclude": {
      "**/__pycache__": true,
      "**/*.pyc": true,
      "**/*.pyo": true,
      "**/*.egg-info": true,
      "**/.pytest_cache": true,
      "**/.coverage": true,
      "**/.tox": true,
      "**/build": true,
      "**/dist": true,
      "**/.git": false,
      "**/.DS_Store": true,
      "**/Thumbs.db": true,
      "**/.venv": true,
      "**/.mypy_cache": true,
      "**/.ruff_cache": true,
      "**/uv.lock": true
    },
    // === Search Exclusions ===
    "search.exclude": {
      "**/__pycache__": true,
      "**/*.pyc": true,
      "**/.git": true,
      "**/node_modules": true,
      "**/.venv": true,
      "**/venv": true,
      "**/env": true,
      "**/.pytest_cache": true,
      "**/.mypy_cache": true,
      "**/.ruff_cache": true,
      "**/build": true,
      "**/dist": true,
      "**/*.egg-info": true,
    },
    // === Git Integration & Team Collaboration ===
    "git.ignoreLimitWarning": true,
    "git.detectSubmodules": true,
    "git.autofetch": true,
    "git.inputValidationLength": 72,
    "git.inputValidationSubjectLength": 50,
    "scm.defaultViewMode": "tree",
    // === IntelliSense & Autocomplete ===
    "editor.quickSuggestions": {
      "other": "on",
      "comments": "off",
      "strings": "on"
    },
    "editor.suggest.localityBonus": true,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "on",
    // === Task Integration ===
    "python.terminal.executeInFileDir": true,
    "terminal.integrated.cwd": "${workspaceFolder}",
    // === Language Specific Settings ===
    "[jsonc]": {
      "editor.defaultFormatter": "vscode.json-language-features",
      "editor.tabSize": 2
    },
    "[json]": {
      "editor.defaultFormatter": "vscode.json-language-features",
      "editor.tabSize": 2
    },
    "[yaml]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": true,
      "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[toml]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": true,
      "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[markdown]": {
      "editor.wordWrap": "on",
      "editor.quickSuggestions": {
        "comments": "off",
        "strings": "off",
        "other": "off"
      }
    },
    // === Performance Optimizations ===
    "extensions.ignoreRecommendations": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "search.smartCase": true,
    "search.useGlobalIgnoreFiles": true,
    "typescript.preferences.includePackageJsonAutoImports": "off",
    "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/**": true,
      "**/__pycache__/**": true,
      "**/.pytest_cache/**": true,
      "**/.mypy_cache/**": true,
      "**/.ruff_cache/**": true,
    },
    // === Debug Configuration ===
    "debug.allowBreakpointsEverywhere": true,
    "debug.inlineValues": "on",
    "debug.toolBarLocation": "docked",
    // === Problems Panel ===
    "problems.decorations.enabled": true,
    "problems.showCurrentInStatus": true,
    // === Editor UI ===
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "breadcrumbs.enabled": true,
    "editor.codeLens": true,
    // === Terminal Settings ===
    "python-envs.pythonProjects": [],
    // === Extension Specific ===
    // Add extension-specific settings as needed when extensions are installed
    // === MATLAB ===
    "MATLAB.startDebuggerAutomatically": true,
    "MATLAB.defaultEditor": false,
    "MATLAB.indexWorkspace": true,
    "MATLAB.maxFileSizeForAnalysis": 0,
    "MATLAB.telemetry": false,
    "MATLAB.showFeatureNotAvailableError": true,
    "MATLAB.prewarmGraphics": true
  }
  